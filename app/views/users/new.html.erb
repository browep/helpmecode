<% title "Sign up" %>


<div class="row">
  <div  class="span-one-half">
    <%= form_tag sessions_path do %>
        <fieldset>
          <legend>Login</legend>

          <div class="clearfix">
            <%= label_tag :login, "Username or Email" %>
            <div class="input"><%= text_field_tag :login, params[:login] %></div>
          </div>

          <div class="clearfix">

            <%= label_tag :password %>
            <div class="input"><%= password_field_tag :password %></div>
          </div>

          <div class="clearfix"><div class="input"><%= submit_tag "Log in",:class=>"btn primary" %></div></div>
        </fieldset>
    <% end %>

  </div>
  <div  class="span-one-half  right-of-divider">

    <%= render 'form' %>

  </div>
</div>
