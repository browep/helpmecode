<%= form_for @user do |f| %>

    <fieldset>
      <legend>Register</legend>
      <%= f.error_messages %>
      <div class="clearfix">
        <%= f.label :username %>
        <div class="input"> <%= f.text_field :username %></div>
      </div>
      <div class="clearfix">
        <%= f.label :email, "Email Address" %>
        <div class="input"> <%= f.text_field :email %></div>
      </div>

      <div class="clearfix">
        <%= f.label :password %><br/>
        <div class="input"><%= f.password_field :password %></div>
      </div>

      <div class="clearfix">
        <%= f.label :password_confirmation, "Confirm Password" %><br/>
        <div class="input"><%= f.password_field :password_confirmation %></div>
      </div>

      <div class="clearfix"><div class="input"><%= f.submit (@user.new_record? ? "Sign up" : "Update"), :class=>"btn primary" %></div></div>
    </fieldset>
<% end %>
