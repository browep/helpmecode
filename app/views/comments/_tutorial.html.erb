<div class="row">
  <div class="span2"><%= image_tag comment.user.avatar_url %>        <br/>
    <%= link_to comment.user.username, user_path(comment.user) %></div>
  <div class="span11"><%= comment.text %></div>

</div>



<div class="row">
  <div class="comment-meta-data span11 offset2">
    <p>
      <small>updated: <%= display_date(comment.updated_at) %></small>
      <% if current_user && comment.user == current_user %>
        <span class="comment-controls">
          <%= link_to "Edit", edit_comment_path(comment) %>
          <%= link_to 'Delete', comment, confirm: 'Are you sure you want to delete this comment? There is no undo!', method: :delete %>
        </span>
    <% end %>
    </p>


  </div>

</div>
<hr class="comment-divider"/>
